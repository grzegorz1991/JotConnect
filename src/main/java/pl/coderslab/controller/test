@PostMapping("/login")
public String login(@RequestParam("username") String username, @RequestParam("password") String password, @RequestParam(value = "rememberMe", required = false) boolean rememberMe, Model model, HttpSession session, HttpServletResponse response) {
    if (userService.login(username, password)) {
        // ... (Your existing login logic)

        // Set the "Remember Me" cookie if the checkbox is checked
        if (rememberMe) {
            Cookie cookie = new Cookie("rememberMeToken", generateUniqueToken()); // Generate a unique token
            cookie.setMaxAge(7 * 24 * 60 * 60); // Set the cookie expiration time (7 days in this example)
            cookie.setPath("/"); // Set the cookie path to the root so it is accessible across the entire application
            response.addCookie(cookie); // Add the cookie to the response
        }
        // ... (Your existing code)
    } else {
        // ... (Your existing code)
    }
}